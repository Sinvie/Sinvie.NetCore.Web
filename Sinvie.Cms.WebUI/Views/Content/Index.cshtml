@{
    ViewData["Title"] = "列表内容";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model M_T_ViewContent;
@using Humanizer;
@using Sinvie.Cms.ViewModels;

<div class="panel panel-default todo-panel">
    <div class="panel-heading">@ViewData["Title"]</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th> <input type="checkbox" class="done-checkbox"></th>
                <th>序号</th>
                <th>标题</th>
                <th>内容</th>
                <th>状态</th>
                <th>添加时间</th>
            </tr>
        </thead>

        @foreach (var item in Model.Contents)
        {
            <tr>
                <td>
                    <input type="checkbox" class="done-checkbox">
                </td>
                <td>@item.Id</td>
                <td>@item.title</td>
                <td>@item.content</td>
                <td>@item.status</td>
                <td>@item.add_time.Humanize()</td>

            </tr>
        }
    </table>
</div>

